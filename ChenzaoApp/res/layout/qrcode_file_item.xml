<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
     >
    
    <ImageView 
		android:id="@+id/date_bg"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/date_bg"
		android:visibility="invisible"
    />
	
	<RelativeLayout 
	    android:id="@+id/layout_right"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="5dp"
	    android:layout_marginLeft="10dp"
	    android:layout_toRightOf="@id/date_bg"	    
	    android:paddingLeft="15dp"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:background="@drawable/frame_bg"
	    >
	    <LinearLayout 
	        android:id="@+id/pics"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:orientation="horizontal"
	        >
	        <ImageView 
	            android:id="@+id/pic1"
	            android:layout_width="@dimen/qrcode_file_item_pic_width"
	            android:layout_height="@dimen/qrcode_file_item_pic_width"
	            android:layout_marginLeft="10dp"
	            android:visibility="gone"
	            />
	        <ImageView 
	            android:id="@+id/pic2"
	            android:layout_width="@dimen/qrcode_file_item_pic_width"
	            android:layout_height="@dimen/qrcode_file_item_pic_width"
	            android:layout_marginLeft="10dp"
	            android:visibility="gone"
	            />
	        <ImageView 
	            android:id="@+id/pic3"
	            android:layout_width="@dimen/qrcode_file_item_pic_width"
	            android:layout_height="@dimen/qrcode_file_item_pic_width"
	            android:layout_marginLeft="10dp"
	            android:visibility="gone"
	            />
	    </LinearLayout>
	    <RelativeLayout 
	        android:id="@+id/contentGroup"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/pics"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"
	        >
	        <ImageView 
		        android:id="@+id/recordIconGone"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_alignParentBottom="true"
		        android:background="@drawable/icon_voice"
		        android:visibility="invisible"
		        />
	        <TextView 
		        android:id="@+id/content"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
	        	android:layout_toLeftOf="@id/recordIconGone"
	       		android:layout_marginRight="10dp"
		        android:textColor="@color/color_gray"
		        android:maxLines="2"
		        />
	        <ImageView 
		        android:id="@+id/recordIcon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_alignParentBottom="true"
		        android:background="@drawable/icon_voice"
		        />
	    </RelativeLayout>
	    
	    
	    <RelativeLayout 
	        android:id="@+id/official_task_group"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/contentGroup"
	        android:layout_margin="10dp"
	        android:visibility="gone"
	        >
	        <TextView 
	            android:id="@+id/customize"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textColor="@color/color_gray"
	            android:layout_alignParentTop="true"
	            />
	        <RelativeLayout 
	            android:id="@+id/rlDay"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/customize"
	        	android:layout_marginTop="10dp"
	            >
	            <TextView 
	                android:id="@+id/dayIndex"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/color_red"
	                android:layout_centerInParent="true"
	                />
	            <LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center_vertical"
	                android:layout_toLeftOf="@id/dayIndex"
	                android:layout_centerVertical="true"
	                android:orientation="horizontal"
	                >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/official_div_dot"
	                    android:layout_weight="1"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/official_div_dot"
	                    android:layout_weight="1"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/official_div_dot"
	                    android:layout_weight="1"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/official_div_dot"
	                    android:layout_weight="1"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/official_div_dot"
	                    android:layout_weight="1"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/official_div_dot"
	                    android:layout_weight="1"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/official_div_dot"
	                    android:layout_weight="1"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/official_div_dot"
	                    android:layout_weight="1"
	                    />
	            </LinearLayout>
	            <LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center_vertical"
	                android:layout_toRightOf="@id/dayIndex"
	                android:layout_centerVertical="true"
	                android:orientation="horizontal"
	                >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/official_div_dot"
	                    android:layout_weight="1"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/official_div_dot"
	                    android:layout_weight="1"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/official_div_dot"
	                    android:layout_weight="1"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/official_div_dot"
	                    android:layout_weight="1"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/official_div_dot"
	                    android:layout_weight="1"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/official_div_dot"
	                    android:layout_weight="1"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/official_div_dot"
	                    android:layout_weight="1"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/official_div_dot"
	                    android:layout_weight="1"
	                    />
	            </LinearLayout>
	        </RelativeLayout>
	        
    	    <ImageView 
	            android:id="@+id/dayPic"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/rlDay"
	            android:layout_marginTop="10dp"
	            />	        
	    </RelativeLayout>
	    
	</RelativeLayout>
	
	<RelativeLayout 
	    android:id="@+id/layout_left"
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:layout_marginTop="5dp"
	    android:layout_toLeftOf="@id/layout_right"
	    android:layout_alignTop="@id/layout_right"
	    android:layout_alignBottom="@id/layout_right"
	    
	    >
	    

	    <LinearLayout 
	        android:id="@+id/date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/date_bg"
	        android:orientation="vertical"
	        >
	        <TextView 
	            android:id="@+id/date_day"
	            android:singleLine="true"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:gravity="bottom"
	            android:textColor="@color/color_white"
	            android:textSize="17sp"
	            />
	        <TextView 
	            android:id="@+id/date_week"
	            android:singleLine="true"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:gravity="top"
	            android:textColor="@color/color_white"
	            android:textSize="@dimen/date_week_text_size"
	            />
	    </LinearLayout>
	    
	    <ImageView 
	        android:id="@+id/line"
	        android:layout_width="1dp"
	        android:layout_height="fill_parent"
	        android:layout_below="@id/date"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:src="@drawable/listpage_line"
	        android:layout_marginTop="5dp"
	        android:scaleType="fitXY"
	        />
	</RelativeLayout>
</RelativeLayout>